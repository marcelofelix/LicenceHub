<%= form_for @account do |f| %>
  <div class="form-group">
    <label for="name" class="form-label">Nome</label>
    <div class="form-control">
      <%= f.text_field :name, autofocus: true %>
      <%= @account.errors[:name]&.first %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
